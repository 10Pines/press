---
import { Astro } from 'astro';
import fs from 'fs';
import BlogLayout from '../../../layouts/BlogLayout.astro';

const { slug } = Astro.params;
const postModule = await import(`./${slug}.mdx`);
const { frontmatter: data, default: Content } = postModule;
---
<BlogLayout title={data.title} lang="es" slug={slug}>
  <Content />
</BlogLayout>