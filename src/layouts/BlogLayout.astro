---
import LanguageSwitcher from '../components/LanguageSwitcher.astro';
const { title, lang, slug } = Astro.props;
---
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <link href="/src/styles/global.css" rel="stylesheet" />
  </head>
  <body class="bg-white text-gray-900 font-sans max-w-3xl mx-auto p-6">
    <LanguageSwitcher lang={lang} slug={slug} />
    <header>
      <h1 class="text-3xl font-bold mb-4">{title}</h1>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>